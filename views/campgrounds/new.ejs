<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card shadow">
            <div class="card-body">
                <div class="card-title">
                    <h1 class="text-center">New Campground</h1>
                </div>
                <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" minlength="3" maxlength="30" id="title" name="campground[title]" required>
                        <div class="invalid-feedback">
                            At least 3 character
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" id="location" name="campground[location]" required>
                        <div class="invalid-feedback">
                            Required
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="price">Campground Price</label>
                        <div class="input-group">
                            <span class="input-group-text" id="price-label">$</span>
                            <input type="text" id="price" class="form-control" name="campground[price]" placeholder="0.00" aria-label="price" aria-describedby="price-label" required>
                            <div class="invalid-feedback">
                                Required
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" type="text" id="description" name="campground[description]" required></textarea>
                        <div class="invalid-feedback">
                            Required
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Choose image(s)</label>
                        <input class="form-control" name="image" type="file" id="image" multiple>
                    </div>
                    <div class="mb-3">
                        <div class="d-grid gap-2 col-12 mx-auto">
                            <button class="btn btn-success">Add Campground</button>
                        </div>
                    </div>
                </form>
           </div>
        </div>
    </div>
</div>